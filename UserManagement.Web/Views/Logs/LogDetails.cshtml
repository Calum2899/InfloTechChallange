@model UserManagement.Web.Models.Logs.LogListItemViewModel
<h2>Log Details</h2>

<form>
    <div class="mb-3">
        <label asp-for="Id" class="form-label"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="UserId" class="form-label"></label>
        <input asp-for="UserId" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="Timestamp" class="form-label"></label>
        <input asp-for="Timestamp" class="form-control" type="datetime" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="ModifiedBy" class="form-label"></label>
        <input asp-for="ModifiedBy" class="form-control" disabled />
    </div>
    <a asp-controller="Logs" asp-action="List" class="btn btn-secondary">Back</a>
</form>
