@model UserManagement.Web.Models.Logs.LogListViewModel

<h2>Log List</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserId</th>
                <th>Timestamp</th>
                <th>Action</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.UserId
                    </td>
                    <td>
                        @item.Timestamp.ToString("dd-MM-yyyy HH:mm:ss")
                    </td>
                    <td>
                        @item.Action
                    </td>
                    <td>
                        <a asp-controller="Logs" asp-action="DetailsOfSelectedLog" asp-route-id=@item.Id class="btn btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
